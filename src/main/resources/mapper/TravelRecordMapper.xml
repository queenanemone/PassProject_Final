<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tripboard.mapper.TravelRecordMapper">
    
    <resultMap id="TravelRecordResultMap" type="com.tripboard.entity.TravelRecord">
        <id property="recordId" column="record_id"/>
        <result property="planId" column="plan_id"/>
        <result property="userId" column="user_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <select id="findById" resultMap="TravelRecordResultMap">
        SELECT * FROM travel_records WHERE record_id = #{recordId}
    </select>
    
    <select id="findByPlanId" resultMap="TravelRecordResultMap">
        SELECT * FROM travel_records WHERE plan_id = #{planId} ORDER BY created_at DESC
    </select>
    
    <select id="findByUserId" resultMap="TravelRecordResultMap">
        SELECT * FROM travel_records WHERE user_id = #{userId} ORDER BY created_at DESC
    </select>
    
    <insert id="insert" useGeneratedKeys="true" keyProperty="recordId">
        INSERT INTO travel_records (plan_id, user_id, title, content, created_at, updated_at)
        VALUES (#{planId}, #{userId}, #{title}, #{content}, #{createdAt}, #{updatedAt})
    </insert>
    
    <update id="update">
        UPDATE travel_records
        SET title = #{title},
            content = #{content},
            updated_at = #{updatedAt}
        WHERE record_id = #{recordId}
    </update>
    
    <delete id="delete">
        DELETE FROM travel_records WHERE record_id = #{recordId}
    </delete>
    
</mapper>

