<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tripboard.mapper.RecordImageMapper">
    
    <resultMap id="RecordImageResultMap" type="com.tripboard.entity.RecordImage">
        <id property="imageId" column="image_id"/>
        <result property="recordId" column="record_id"/>
        <result property="imageUrl" column="image_url"/>
        <result property="imageOrder" column="image_order"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>
    
    <select id="findByRecordId" resultMap="RecordImageResultMap">
        SELECT * FROM record_images WHERE record_id = #{recordId} ORDER BY image_order
    </select>
    
    <insert id="insert" useGeneratedKeys="true" keyProperty="imageId">
        INSERT INTO record_images (record_id, image_url, image_order, created_at)
        VALUES (#{recordId}, #{imageUrl}, #{imageOrder}, #{createdAt})
    </insert>
    
    <delete id="delete">
        DELETE FROM record_images WHERE image_id = #{imageId}
    </delete>
    
</mapper>

